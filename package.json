{
  "name": "contacts-alfasoft",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsx watch server/index.ts\"",
    "client": "vite",
    "server": "tsx watch server/index.ts",
    "build": "run-p type-check \"build-only {@}\" build:server --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "build:server": "npm run build:server:compile && npm run build:server:copy",
    "build:server:compile": "tsc -p server/tsconfig.json",
    "build:server:copy": "npm run build:server:copy-sql && npm run build:server:copy-uploads && npm run build:server:copy-html",
    "build:server:copy-sql": "copy server\\database\\*.sql server\\dist\\database\\",
    "build:server:copy-uploads": "if not exist server\\dist\\uploads\\images mkdir server\\dist\\uploads\\images && copy server\\uploads\\images\\* server\\dist\\uploads\\images\\ 2>nul || echo uploads copied",
    "build:server:copy-html": "if not exist server\\dist\\..\\html mkdir server\\dist\\..\\html && xcopy html server\\dist\\..\\html /E /I /Y 2>nul || echo html copied",
    "build:server:watch": "tsc -p server/tsconfig.json --watch",
    "build:production": "run-p build-only build:server",
    "start:server": "node server/dist/index.js",
    "start:server:dev": "tsx watch server/index.ts",
    "clean:server": "rimraf server/dist",
    "clean:all": "run-p clean:server \"rimraf dist\"",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "test:system": "tsx server/test-system.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.2.0",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@nuxt/ui": "^3.2.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "mysql2": "^3.14.2",
    "pinia": "^3.0.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@tailwindcss/vite": "^4.1.11",
    "@tsconfig/node22": "^22.0.2",
    "@types/form-data": "^2.2.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.32",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitejs/plugin-vue-jsx": "^5.0.0",
    "@vitest/eslint-plugin": "^1.2.7",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "~10.2.0",
    "form-data": "^4.0.3",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "node-fetch": "^3.3.2",
    "npm-run-all2": "^8.0.4",
    "pino-pretty": "^13.0.0",
    "prettier": "3.5.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.2.10"
  }
}
